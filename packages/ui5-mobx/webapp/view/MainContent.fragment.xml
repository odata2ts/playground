<core:FragmentDefinition
  controllerName="org.odata2ts.tst.mobx.Main"
  xmlns:core="sap.ui.core"
  xmlns="sap.m"
>
  <Table id="peopleTable" items="{/formattedPeople}" mode="SingleSelectMaster" selectionChange=".onSelect">
    <columns>
      <Column>
        <Text text="First Name" />
      </Column>
      <Column>
        <Text text="Last Name" />
      </Column>
      <Column>
        <Text text="Computed Full Name" />
      </Column>
    </columns>
    <items>
      <ColumnListItem>
        <cells>
          <Text text="{FirstName}" />
          <Text text="{LastName}" />
          <Text text="{fullName}" />
        </cells>
      </ColumnListItem>
    </items>
  </Table>
</core:FragmentDefinition>
